<div class="container d-flex flex-column align-items-center">
  <div class="card-category mt-5 mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <%= @restaurant.name %>
  </div>

  <div class="graph-container d-flex flex-wrap mb-5">
    <canvas class="graph" id="linesChart" data-dates="<%= @dates.to_json %>" data-ratings="<%= @ratings.to_json %>" data-average="<%= @main_average_rating.to_json %>"></canvas>
  </div>

  <div class="d-flex flex-wrap justify-content-center">
    <%= render partial: "review", collection: @reviews, as: :review %>
  </div>
</div>
